@model IEnumerable<UnitOfWork.Models.ProductOptions>
@using X.PagedList.Mvc.Core; <!--import to get HTML Helper-->
@using X.PagedList;
@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    body {
        font-size: 12px;
    }

    .table thead th {
        color: #000000;
        vertical-align: bottom;
        border-bottom: 1px solid #dee2e6;
    }
</style>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.option11)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.option22)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.option33)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.option44)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.option55)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.option66)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddOEdit","ProductOptions",null,Context.Request.Scheme)','New Product')" class="btn btn-success text-white"><i class="fas fa-random"></i> New Product</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.option11)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.option22)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.option33)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.option44)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.option55)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.option66)
            </td>
            <td>
                 <div>
                            <a onclick="showInPopup('@Url.Action("AddOEdit","ProductOptions",new {id=item.Id},Context.Request.Scheme)','Update Transaction')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                <input type="hidden" asp-for="@item.Id" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </div>
            </td>
        </tr>
}
    </tbody>
</table>
