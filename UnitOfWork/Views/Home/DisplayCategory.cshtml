 @using UnitOfWork.Models
 @model DisplayViews



@{
    ViewData["Title"] = "@Model.singlecategory.Name";
}

    <!-- ======= Breadcrumbs ======= -->
      <div class="breadcrumbs d-flex align-items-center" style="background-image: url('/assets/img/breadcrumbs-bg.jpg');">
        <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">

       <h2>@Model.singlecategory.Name</h2>
          <ol>
            <li><a href="index.html">@Model.singlecategory.Name</a></li>
            <li>Choose One</li>
          </ol>
  
        </div>
      </div><!-- End Breadcrumbs -->

 <section class="display_plates">
    <div class="container p-5 text-center">
        <div class="row">
                <div class="col-12 text-center p-5">
                          
                    <span class="colorh1"> </span>
            
                    <P class="p2">If you are looking for a restaurant to host your next event or party, then check out our fantastic banquet rooms at Buca.
                         Our fun and festive semi-private dining rooms are uniquely decorated, comfortable, and inviting, making Broccli's in Dallas, TX the perfect place for hosting a large banquet or an intimate gathering.</P>
                </div>
            @foreach (Products item in Model.Products)
            {


                  <div class="col-lg-3 col-sm-6 mb5 ">
                    <H3>@item.Title</H3>
                    <div class="card product-card">

                        <div class="product-img">
                            
                         <div class="figure">
                        <a asp-action="ProductDetail" asp-route-id="@item.Id" asp-route-slug="@item.slug">
                        <img class="card-img-top" src="~/images/images.jpg" alt="..." />
                       
                        </a>
                         </div>

                                <div class="card-body">
                                    <div class="float-start"><h6> @item.Title  </h6>  </div>
                                    <div class="float-end">Price:  @item.Price.ToString("c")  </div><br>

                                </div>

                        </div>
                             <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a class="btn btn-outline-success mt-auto" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@item.Id">BUY NOW !</a></div>
                  </div>
                    </div>
                  </div>

            }


        </div>
    </div>
</section>