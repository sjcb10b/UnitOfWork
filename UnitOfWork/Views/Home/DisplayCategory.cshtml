@model DisplayViews

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        @foreach (Products item in Model.Products)
        {
            <div class="col mb-5">
                <div class="card h-100 rounded-9">
                    <!-- Product image-->
                    <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text">@item.Category</p>

                            <!-- Product price-->
                            Price:  @item.Price.ToString("c")
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a class="btn btn-outline-success mt-auto" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@item.Id">BUY NOW !</a></div>
                    </div>
                </div>
            </div>


        }
    </div>
</div>