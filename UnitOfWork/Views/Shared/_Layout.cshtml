<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Website JCCB Example 5</title>
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="JccBstyle.css">
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- Font Awesome 5 CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <!-- Custom CSS file -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <!-- start Body  -->
    <header>
        <!-- nav bar container -->
        <nav class="navbar navbar-expand-lg p-5 bg-dark navbar-dark py-3 fixed-top">
            <div class="container">
                <a href="" class="navbar-brand nav-link">Logo </a>

                <button class="navbar-toggler bg-dark" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navmenu">

                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item">
                            <a class="nav-link active" href="#">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="about.html">About</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="product.html">Product</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="gallery.html">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="contact.html">Contact</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>


                    </ul>
                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </ul>

                </div>
            </div>
        </nav>
        <!-- end nav var container -->
    </header>

                 @RenderBody()


    <!-- Footer section Start-->
    <section class="footer-wrapper">
        <div class="container px-5 px-lg-0">
            <div class="row">
                <div class="col-lg-3 col-sm-6 mb-5 mb-lg-0">
                    <a href="" class="navbar-brand nav-link"><img src="images/logo-italian.png"> </a>
                    <p class="mb-4 ps-0 company_details">No wonder Brolli's continues to be recognized as the Best Italian Restaurant by many local magazines. Bring your family and friends in for any occasion for amazing service and great food! Don’t forget to Bring Your Own Bottle of favorite spirits!</p>

                </div>
                <div class="col-lg-3 col-sm-6 mb-5 mb-lg-0">
                    <h3>Customer Support</h3>
                    <ul class="link-widget p-0">
                        <li><a href="#" class="nav-link active">About Us</a></li>
                        <li><a href="#" class="nav-link active">Privacy Policy</a></li>
                        <li><a href="#" class="nav-link active">Terms & Conditions</a></li>
                        <li><a href="#" class="nav-link active">Product Returns</a></li>
                        <li><a href="#" class="nav-link active">Wholesale Policy</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-sm-6 mb-5 mb-lg-0">
                    <h3>Quick Links</h3>
                    <ul class="link-widget p-0">
                        <li><a href="#" class="nav-link active">Product</a></li>
                        <li><a href="#" class="nav-link active">Terms & Conditions</a></li>
                        <li><a href="#" class="nav-link active">Contact</a></li>
                        <li><a href="#" class="nav-link active">Accessories</a></li>
                        <li><a href="#" class="nav-link active">Term Of Use</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-sm-6 mb-5 mb-lg-0">
                    <h3>Newsletter</h3>
                    <div class="form-group mb-4">
                        <input type="email" class="form-control bg-transparent" placeholder="Enter Your Email Here">
                        <button type="submit" class="btn main-btn">Subscribe</button>
                    </div>
                    <h3>Stay Connected</h3>
                    <div class="contact-info">
                        <ul class="list-unstyled">
                            <p>Address: No. 96, South City, London</p>
                            <p>Phone: +1 222 3333</p>
                            <p>E-mail: info@example.com</p></a>
                        </ul>
                    </div>
                    <ul class="social-network d-flex align-items-center p-0">
                        <li><a href="#"><i class="fab fa-facebook-f"> </i></a></li>
                        <li><a href="#"><i class="fab fa-twitter"> </i></a></li>
                        <li><a href="#"><i class="fab fa-linkedin-in"> </i></a></li>
                        <li><a href="#"><i class="fab fa-youtube"></i> </a></li>
                    </ul>
                </div>
            </div>
        </div>

    </section>

    <section class="footer-wrapper2">
        <div class="container">
            <div class="row">

                <p><a href="#" class="nav-link active"></a>Copyright © JCCBWEB All Rights Reserved</a> </p>
            </div>
        </div>
    </section>
    <!-- Footer Section Exit  -->
    <!-- Custom JS -->
 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
